FROM debian:stretch

# ** [Optional] Uncomment this section to install additional packages. **
#
RUN apt-get update \
    &&apt-get install -y gcc \
    && apt-get install -y g++ \
    && apt-get install -y gdb \
    && apt-get install -y cmake